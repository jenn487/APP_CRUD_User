@model IEnumerable<APP_CRUD.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="page-header">
    <h1 class="page-title">Lista de Usuarios</h1>
    <div class="page-actions">
        <a asp-action="Create" class="btn btn-primary">➕ Nuevo Usuario</a>
    </div>
</div>

<table class="table table-bordered table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.First().Fecha)</th>
            <th>@Html.DisplayNameFor(model => model.First().Contrasenia)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>@Html.DisplayFor(modelItem => item.Contrasenia)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">📄 Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
